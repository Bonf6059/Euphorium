<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MakeableDrugBase">
		<defName>Bluedrug</defName>
		<label>Blue drug</label>
		<description>test drug</description>
		<graphicData>
			<texPath>Things/Item/Drug/Blue_drug</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<MarketValue>10</MarketValue>
			<Mass>0.01</Mass>
		</statBases>
		<costList>
			<MedicineHerbal>3</MedicineHerbal>
			<Neutroamine>1</Neutroamine>
		</costList>
		<ingestible>
			<foodType>Processed</foodType>
			<drugCategory>Medical</drugCategory>
			<baseIngestTicks>100</baseIngestTicks>
			<chairSearchRadius>4</chairSearchRadius>
			<nurseable>True</nurseable>
			<outcomeDoers>
        		<li Class="IngestionOutcomeDoer_GiveHediff">
         			<hediffDef>BluedrugHigh</hediffDef>
          			<severity>1.0</severity>
        		</li>
      		</outcomeDoers>
		</ingestible>
		<comps>
    		<li Class="CompProperties_Drug">
        		<listOrder>1000</listOrder>
        		<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
      		</li>
    	</comps>
    	<recipeMaker>
          <researchPrerequisite>EuphoriumProduction</researchPrerequisite>
          <recipeUsers>
              <li>DrugLab</li>
          </recipeUsers>
          <soundWorking>Recipe_Drug</soundWorking>
      </recipeMaker>
	</ThingDef>
	<HediffDef>
    <defName>BluedrugHigh</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>Blue drug</label>
    <description>Blue drug-induced immunity to certain illnesses. This only blocks new infections; it does nothing for those who are already infected, even if their infection is dormant.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.18</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
          <makeImmuneTo>
            <li>Malaria</li>
            <li>SleepingSickness</li>
            <li>Plague</li>
            <li>GutWorms</li>
            <li>FibrousMechanites</li>
          </makeImmuneTo>
        </li>
      </stages>
  	</HediffDef>
  	<researchProjectDef>
  		<defName>BluedrugProduction</defName>
  		<label>Blue drug Production</label>
  		<description>Refine medical herbs for an alternative to penoxicylline</description>
  		<baseCost>600</baseCost>
  		<techLevel>Industrial</techLevel>
  		<prerequisites>
  			<li>DrugProduction</li>
  		</prerequisites>
  		<researchViewX>4.00</researchViewX>
  		<researchViewY>2.20</researchViewY>
  	</researchProjectDef>
</Defs>